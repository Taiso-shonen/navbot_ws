<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="base_footprint" />

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.2" rpy="0 0 0" />
    </joint>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.4 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="turquoise" />
        </visual>
        <collision>
            <geometry>
                <box size="0.4 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
        <xacro:box_inertia m="5.0" x="0.4" y="0.4" z="0.2" 
                           o_xyz="0 0 0" o_rpy="0 0 0" />
    </link>

    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel_link" />
        <origin xyz="-0.1 -0.225 -0.1" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
        </collision>
        <xacro:cylinder_inertia m="0.5" r="0.1" l="0.05" 
                           o_xyz="0 0 0" o_rpy="1.57 0 0" />
    </link>

    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel_link" />
        <origin xyz="-0.1 0.225 -0.1" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
        </collision>
        <xacro:cylinder_inertia m="0.5" r="0.1" l="0.05" 
                           o_xyz="0 0 0" o_rpy="1.57 0 0" />
    </link>

    <joint name="base_caster_wheel_joint" type="fixed">
        <parent link="base_link" />
        <child link="caster_wheel_link" />
        <origin xyz="0.15 0 -0.15" rpy="0 0 0" />
    </joint>

    <link name="caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
        <xacro:sphere_inertia m="0.5" r="0.05" 
                           o_xyz="0 0 0" o_rpy="0 0 0" />
    </link>

</robot>

